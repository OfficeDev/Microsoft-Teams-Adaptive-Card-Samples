{
    "type": "AdaptiveCard",
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "TextBlock",
            "text": "Time Off Request",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "Container",
            "backgroundImage": {
                "url": "https://raw.githubusercontent.com/OfficeDev/Microsoft-Teams-Adaptive-Card-Samples/refs/heads/Suz-SimpleTimeOffRequest/samples/simple-time-off-request/assets/hero.png"
            },
            "minHeight": "180px",
            "roundedCorners": true,
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "backgroundImage": {
                                "url": "https://github.com/OfficeDev/Microsoft-Teams-Adaptive-Card-Samples/blob/Suz-SimpleTimeOffRequest/samples/simple-time-off-request/assets/colorSpacer.png"
                            },
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Take a Break",
                                    "wrap": true,
                                    "size": "ExtraLarge",
                                    "weight": "Bolder",
                                    "color": "Dark"
                                }
                            ],
                            "verticalContentAlignment": "Top",
                            "roundedCorners": true
                        }
                    ],
                    "horizontalAlignment": "Right",
                    "targetWidth": "AtLeast:Narrow"
                }
            ],
            "targetWidth": "AtLeast:Narrow"
        },
        {
            "type": "Container",
            "backgroundImage": {
                "url": "https://raw.githubusercontent.com/OfficeDev/Microsoft-Teams-Adaptive-Card-Samples/refs/heads/Suz-SimpleTimeOffRequest/samples/simple-time-off-request/assets/hero.png",
                "horizontalAlignment": "Center"
            },
            "minHeight": "120px",
            "targetWidth": "VeryNarrow"
        }
    ]
}
