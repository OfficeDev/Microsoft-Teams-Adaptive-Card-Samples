{
  "type": "AdaptiveCard",
  "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "backgroundImage": {
        "url": "https://raw.githubusercontent.com/OfficeDev/Microsoft-Teams-Adaptive-Card-Samples/refs/heads/Suz-StarterCardsSetThree/samples/simple-time-off-request/assets/hero.png"
      },
      "minHeight": "200px",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "style": "accent",
              "roundedCorners": true,
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Take a break",
                  "wrap": true,
                  "size": "ExtraLarge",
                  "color": "Dark",
                  "weight": "Bolder"
                }
              ],
              "backgroundImage": {
                "url": "https://raw.githubusercontent.com/OfficeDev/Microsoft-Teams-Adaptive-Card-Samples/refs/heads/Suz-StarterCardsSetThree/samples/simple-time-off-request/assets/colorSpacer.png"
              }
            }
          ],
          "horizontalAlignment": "Right"
        },
        {
          "type": "ColumnSet",
          "height": "stretch",
          "horizontalAlignment": "Right"
        }
      ],
      "roundedCorners": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "reason",
      "choices": [
        {
          "title": "Vacation",
          "value": "value1"
        },
        {
          "title": "Family leave",
          "value": "value2"
        },
        {
          "title": "Medical leave",
          "value": "value3"
        },
        {
          "title": "Short term disability",
          "value": "value4"
        }
      ],
      "placeholder": "Enter a reason",
      "label": "Reason for leave",
      "isRequired": true,
      "value": "Vacation",
      "errorMessage": "A reason for leave is required"
    },
    {
      "type": "Input.Date",
      "id": "date",
      "label": "Date",
      "isRequired": true,
      "errorMessage": "A date is required"
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Submit",
          "style": "positive"
        }
      ]
    }
  ]
}
